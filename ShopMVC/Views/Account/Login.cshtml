@model Skillap.MVC.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <section>
            <div class="text-center pt-3">
                <i class="fas fa-user-ninja fa-7x"></i>
            </div>
            <h2 id="main_text_authorization" class="text-center pt-3 pb-2">Login</h2>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label id="add_text" asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control input_email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label id="add_text" asp-for="Password" class="control-label"></label>
                    <input type="password" asp-for="Password" class="form-control input_password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div id="add_text" class="form-group text-center">
                    <p>
                        <a id="forgot-password" class="nav-link" asp-page="">Forgot Your Password?</a>
                    </p>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label id="add_text" asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div id="main_text" class="form-group">
                    <button id="buttons_auth" value="Sign In" class="btn btn-primary btn-block" type="submit">Sign In</button>
                </div>
                <hr />

            </form>
